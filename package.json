{
  "name": "tech-blog-app",
  "version": "1.0.0",
  "description": "Full Stack Tech Blog Application (Backend + Frontend)",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "live-server frontend/public --port=3000 --entry-file=index.html",
    "dev": "concurrently \"npm run server\" \"npm run client\""
