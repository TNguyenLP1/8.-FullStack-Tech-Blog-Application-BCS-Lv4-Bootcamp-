    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.3.1",
    "sequelize": "^6.32.1"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "live-server": "^1.2.0",
    "nodemon": "^3.0.2"
  }
}
